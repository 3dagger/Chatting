<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="fm"
            type="kr.dagger.rocketpunchpretask.presentation.ui.message.MessageFragment" />

        <variable
            name="clickListener"
            type="kr.dagger.rocketpunchpretask.presentation.common.ButtonClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include_title_bar"
            layout="@layout/include_title_bar"
            app:right="@{`새 메시지`}"
            app:title="@{`메시지`}"
            app:click="@{clickListener}"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_title_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>