<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MessageFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="kr.dagger.rocketpunchpretask.presentation.ui.home.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/PeopleFragment"
        android:name="kr.dagger.rocketpunchpretask.presentation.ui.people.PeopleFragment"
        android:label="@string/people_fragment_label"
        tools:layout="@layout/fragment_people" />
    <fragment
        android:id="@+id/MessageFragment"
        android:name="kr.dagger.rocketpunchpretask.presentation.ui.message.MessageFragment"
        android:label="@string/message_fragment_label"
        tools:layout="@layout/fragment_message">

        <action
            android:id="@+id/action_navigation_messageFragment_to_createMessageFragment"
            app:destination="@id/CreateMessageFragment" />
    </fragment>

    <fragment
        android:id="@+id/CreateMessageFragment"
        android:name="kr.dagger.rocketpunchpretask.presentation.ui.message.create.CreateMessageFragment"
        tools:layout="@layout/fragment_create_message">

        <action
            android:id="@+id/action_navigation_createMessageFragment_to_messageFragment"
            app:destination="@id/MessageFragment" />

    </fragment>

    <fragment
        android:id="@+id/MyPageFragment"
        android:name="kr.dagger.rocketpunchpretask.presentation.ui.mypage.MyPageFragment"
        android:label="@string/my_page_fragment_label"
        tools:layout="@layout/fragment_mypage">

        <!--        <action-->
        <!--            android:id="@+id/action_SecondFragment_to_FirstFragment"-->
        <!--            app:destination="@id/FirstFragment" />-->
