    <fragment
        android:id="@+id/RecruitFragment"
        android:name="kr.dagger.rocketpunchpretask.presentation.ui.recruit.RecruitFragment"
        android:label="@string/recruit_fragment_label"
        tools:layout="@layout/fragment_recruit">

    </fragment>

